{% extends 'index' %}

{% block content %}

        <div class='leiding-content'>
            <h1>Hoofdleiding & volwassen begeleigers</h1>
                <div class="leiding-container">
                    <div class="hoofdleiding">
                        <h2>Hoofdleiding</h2>
                        <div class="description">
                            {{ entry.beschrijvingHoofdleiding }}
                        </div>
                        <div class="leiders">
                        {% for leider in entry.hoofdleiding.all() %}
                            {% set foto = leider.foto.one() %}
                            <div class="person"> 
                                <h2>{{ leider.naam }}</h2>
                                <div class="leider-foto-vb">
                                    <img src='{{ foto.url }}' />
                                </div>
                                <p>{{ leider.nummer }}</p>
                                <p>{{ leider.email }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="vb-container">
                <div class="vb">
                    <h2>Volwassen begeleiders</h2>
                    <div class="description">
                        {{ entry.beschrijvingVolwassen }}
                    </div>
                    <div class="leiders">
                    {% for leider in entry.vb.all() %}
                        {% set foto = leider.foto.one() %}
                        <div class="person"> 
                            <h2>{{ leider.naam }}</h2>
                            <div class="leider-foto-vb">
                                <img src='{{ foto.url }}' />
                            </div>
                            <p>{{ leider.telefoon }}</p>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>

{% endblock %}